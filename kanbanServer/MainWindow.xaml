<Window x:Class="kanbanServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kanbanServer"
        xmlns:viewmodels="clr-namespace:kanbanServer.ViewModels" xmlns:views="clr-namespace:kanbanServer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:KanbanViewModels></viewmodels:KanbanViewModels>
        
    </Window.DataContext>
    <Grid Background="#f4f4f4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Servidor de kanban "
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"
                   FontSize="30"
                   Foreground="Coral"/>
        <Button Grid.Row="1"
                Width="100" 
                Height="50"
                HorizontalAlignment="Left"
                Background="Transparent"
                FontSize="20"
                Margin="5 0 0 0"
                Foreground="Coral"
                Content="Iniciar" 
                Command="{Binding IniciarCommand}"/>
        <Button Grid.Row="1"
                HorizontalAlignment="Right"
                Grid.Column="1"
                Width="100" 
                Height="50"
                Background="Transparent" 
                FontSize="20"
                Margin="0 0 5 0"
                Foreground="Coral"
                Content="Detener" 
                Command="{Binding DetenerCommand}"/>
        <TextBlock Grid.Row="3" 
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"
                   Foreground="Coral"
                   Text="Estae programa esta echo por "/>
        <views:ListaUsuariosView 
            Grid.Row="2"
             Grid.ColumnSpan="2"></views:ListaUsuariosView>
    </Grid>
</Window>
